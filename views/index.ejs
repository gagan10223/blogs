<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs')%>
    </head>
    <body>
        <%- include('./partials/body.ejs')%>
        <div class="m-10">
            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div>
                        <h1 class="text-3xl text-gray-600 p-2"><%= blog.title %></h1>
                        <h1 class="text-gray-500 pl-2"><%= blog.body %></h1>
                    </div>
    
                <% }); %>
              <% } %>
        </div>    
        <%- include('./partials/footer.ejs')%>
    </body>
</html>