<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs')%>
    </head>
    <body>
        <%- include('./partials/body.ejs')%>
        
        <div class="create-blog content">
            <form action="/edit/<%=data._id%>?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <input type="hidden" id="title" name="username" value=`<%= username %>` required>
                <label for="title">Blog title:</label>
                <input type="text" id="title" name="title" value="<%= data.title %>" required>
                <label for="snippet">Blog snippet:</label>
                <input type="text" id="snippet" name="snippet" value="<%= data.snippet %>" required>
                <label for="body">Blog body:</label>
                <textarea id="body" name="body" required><%= data.body %></textarea>
                <button>Submit</button>
            </form>
        </div>
        <%- include('./partials/footer.ejs')%>
        
    </body>
</html>
